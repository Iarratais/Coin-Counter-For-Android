<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.karl.android.fragments.MySavesFragment">

    <TextView
        android:id="@+id/my_saves_fragment_no_information_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_saves_fragment_no_information_to_display"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/ic_local_library_black_48dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ListView
        android:id="@+id/my_saves_fragment_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</RelativeLayout>
