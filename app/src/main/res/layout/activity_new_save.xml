<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_new_save"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.karl.android.coincounter.NewSaveActivity"
    android:orientation="vertical">

    <TextView
        android:text="@string/notes200000edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_save_200000_title"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <EditText
            android:id="@+id/new_save_200000_edit_text"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_marginStart="20dp"
            android:layout_toStartOf="@id/new_save_200000_edit_text"
            android:layout_marginEnd="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_remove_circle_outline_black_24dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@id/new_save_200000_edit_text"
            android:background="@drawable/ic_remove_circle_outline_black_24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>

</LinearLayout>
