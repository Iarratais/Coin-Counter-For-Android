<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/my_saves_adapter_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Sample Title Text"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:typeface="sans"
        />

    <TextView
        android:id="@+id/my_saves_adapter_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_saves_adapter_title_text_view"
        android:layout_alignStart="@+id/my_saves_adapter_title_text_view"
        android:layout_below="@+id/my_saves_adapter_title_text_view"
        android:layout_marginTop="12dp"
        android:maxLines="3"
        android:text="Sample date"/>

    <TextView
        android:id="@+id/my_saves_adapter_amount_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/my_saves_adapter_title_text_view"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="â‚¬21.20"/>
</RelativeLayout>